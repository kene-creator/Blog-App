<div>
  <div>
    <div> <img src='http://placeimg.com/640/480/any' alt='<%= @user.name %>'></div> 
    <div>
      <h3><%= @user.name %></h3>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>

  <ul>
    <% @posts.each do |post| %>
        <li>
          <h4><%= link_to post.title, user_post_path(@user, post) %></h4>
          <p><%= post.text %></p>
          <div>
            <span>Comments: <%= post.comments_counter %> </span>
            <span>&nbsp;</span>
            <span> Likes: <%= post.likes_counter %></span>
          </div>

          <ul> 
            <%post.recent_comments.each do |comment| %>
              <li><%= comment.author.name %>: <%= comment.text %></li>
            <% end %>
          </ul>
        </li>
    <% end %>
  <ul>

  <div></div>
    Pagination
  </div>
</div>
